# Production Environment Variables
# Server Configuration
# client/.env.production
# This will be updated after Render deployment
REACT_APP_API_URL=https://your-render-backend-url.onrender.com/api

NEXT_PUBLIC_SERVER_URL=https://ebylife-api.vercel.app
NEXT_PUBLIC_WS_URL=wss://ebylife-api.vercel.app

# WebRTC Configuration
NEXT_PUBLIC_ICE_SERVERS=["stun:stun.l.google.com:19302"]

# Analytics (optional)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_POSTHOG_KEY=

# Security
NEXT_PUBLIC_ENABLE_HTTPS=true
NEXT_PUBLIC_SECURE_COOKIES=true

# Feature Flags
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true